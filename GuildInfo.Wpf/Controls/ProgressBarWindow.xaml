<Window x:Class="GuildInfo.Wpf.Controls.ProgressBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:GuildInfo.Wpf.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        d:DataContext="{d:DesignInstance viewModels:ProgressBarViewModel}"
        Title="Processing..." Height="80" Width="300">
    <Grid>
        <ProgressBar Maximum="1" Margin="5" Height="20" Value="{Binding Progress}"/>
    </Grid>
</Window>
